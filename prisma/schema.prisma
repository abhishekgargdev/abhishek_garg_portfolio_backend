generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["abhishek_portfolio"]
}

enum TimelineType {
  ACHIEVEMENT
  CERTIFICATE
  EXPERIENCE
  PROJECT
  OTHER
}

model User {
  id            String    @id @default(uuid())
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  fullName      String?   @map("full_name")
  tags          String[]  @default([])
  description   String?   @db.Text
  profileImageUrl String? @map("profile_image_url") @db.Text
  profileImagePublicId String? @map("profile_image_public_id")
  beyondCode          String?   @map("beyond_code") @db.Text
  beyondCodeTags      String[]  @map("beyond_code_tags") @default([])
  email         String    @unique
  hashPassword  String    @map("hash_password")
  accessToken   String?   @map("access_token") @db.Text
  refreshToken  String?   @map("refresh_token") @db.Text
  resetToken    String?   @map("reset_token")
  resetTokenExpiry DateTime? @map("reset_token_expiry")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("users")
  @@schema("abhishek_portfolio")
}


model Timeline {
  id        String       @id @default(uuid())
  title     String
  subTitle  String?      @map("sub_title")
  type      TimelineType
  startDate DateTime     @map("start_date")
  endDate   DateTime?    @map("end_date")
  description String?    @db.Text
  tags      String[]     @default([])
  skills    String[]     @default([])
  userId    String       @map("user_id")
  user      User         @relation(fields: [userId], references: [id])
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  @@map("timeline")
  @@schema("abhishek_portfolio")
}

model RedisConnection {
  id           String   @id @default(uuid())
  status       String
  details      Json?
  lastCheckedAt DateTime @map("last_checked_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("redis_connections")
  @@schema("abhishek_portfolio")
}

