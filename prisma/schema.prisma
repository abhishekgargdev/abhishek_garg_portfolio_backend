generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["abhishek_portfolio"]
}

enum TimelineType {
  ACHIEVEMENT
  CERTIFICATE
  EXPERIENCE
  PROJECT
  OTHER

  @@schema("abhishek_portfolio")
}

model User {
  id            String    @id @default(uuid())
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  fullName      String?   @map("full_name")
  tags          String[]  @default([])
  description   String?   @db.Text
  profileImageUrl String? @map("profile_image_url") @db.Text
  profileImagePublicId String? @map("profile_image_public_id")
  beyondCode          String?   @map("beyond_code") @db.Text
  beyondCodeTags      String[]  @map("beyond_code_tags") @default([])
  email         String    @unique
  hashPassword  String    @map("hash_password")
  accessToken   String?   @map("access_token") @db.Text
  refreshToken  String?   @map("refresh_token") @db.Text
  resetToken    String?   @map("reset_token")
  resetTokenExpiry DateTime? @map("reset_token_expiry")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  timelines     Timeline[]
  skills        Skill[]
  projects      Project[]
  education     Education[]
  workExperience WorkExperience[]
  achievements  Achievement[]
  certificates  Certificate[]

  @@map("users")
  @@schema("abhishek_portfolio")
}


model Timeline {
  id        String       @id @default(uuid())
  title     String
  subTitle  String?      @map("sub_title")
  type      TimelineType
  startDate DateTime     @map("start_date")
  endDate   DateTime?    @map("end_date")
  description String?    @db.Text
  tags      String[]     @default([])
  skills    String[]     @default([])
  userId    String       @map("user_id")
  user      User         @relation(fields: [userId], references: [id])
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  @@map("timeline")
  @@schema("abhishek_portfolio")
}

enum SkillSection {
  SKILL
  TOOL
  LIBRARY
  FRAMEWORK
  OTHER

  @@schema("abhishek_portfolio")
}

model Skill {
  id          String       @id @default(uuid())
  userId      String       @map("user_id")
  user        User         @relation(fields: [userId], references: [id])
  name        String
  iconName    String?      @map("icon_name")
  section     SkillSection
  iconLibrary String?      @map("icon_library")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  @@map("skills")
  @@schema("abhishek_portfolio")
}

model RedisConnection {
  id           String   @id @default(uuid())
  status       String
  details      Json?
  lastCheckedAt DateTime @map("last_checked_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("redis_connections")
  @@schema("abhishek_portfolio")
}

model DatabaseCheck {
  id           String   @id @default(uuid())
  status       String
  details      Json?
  lastCheckedAt DateTime @map("last_checked_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("database_checks")
  @@schema("abhishek_portfolio")
}

model Project {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])
  domain      String
  name        String
  description String?  @db.Text
  skills      String[] @default([])
  images      String[] @default([])
  blob        Json?    // Contains: projectIntro, githubLink, documentLink, liveLink
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("projects")
  @@schema("abhishek_portfolio")
}

model Education {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])
  degree      String
  collegeName String   @map("college_name")
  startDate   DateTime @map("start_date")
  endDate     DateTime? @map("end_date")
  description String?  @db.Text
  tags        String[] @default([])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("education")
  @@schema("abhishek_portfolio")
}

model WorkExperience {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])
  companyName String   @map("company_name")
  title       String
  startDate   DateTime @map("start_date")
  endDate     DateTime? @map("end_date")
  description String?  @db.Text
  points      String[] @default([])
  location    String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("work_experience")
  @@schema("abhishek_portfolio")
}

model Achievement {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  user            User     @relation(fields: [userId], references: [id])
  title           String
  date            DateTime
  subtitle        String?  @db.Text
  description     String?  @db.Text
  imageUrl        String?  @map("image_url") @db.Text
  imagePublicId   String?  @map("image_public_id")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("achievements")
  @@schema("abhishek_portfolio")
}

model Certificate {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  user            User     @relation(fields: [userId], references: [id])
  title           String
  date            DateTime
  subtitle        String?  @db.Text
  description     String?  @db.Text
  imageUrl        String?  @map("image_url") @db.Text
  imagePublicId   String?  @map("image_public_id")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("certificates")
  @@schema("abhishek_portfolio")
}

model UserQuery {
  id          String   @id @default(uuid())
  name        String
  email       String
  subject     String
  message     String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("user_queries")
  @@schema("abhishek_portfolio")
}

