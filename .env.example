# Set environment: local | dev | prod
NODE_ENV=local

# You can provide environment-specific variables using prefixes:
# LOCAL_, DEV_, PROD_. The loader will pick values based on NODE_ENV.

# Example (local):
LOCAL_DATABASE_URL="postgresql://username:password@localhost:5432/nest_auth_db?schema=public"
LOCAL_JWT_SECRET="local-jwt-secret"
LOCAL_JWT_REFRESH_SECRET="local-refresh-secret"
LOCAL_JWT_EXPIRATION="15m"
LOCAL_JWT_REFRESH_EXPIRATION="7d"

LOCAL_REDIS_HOST="localhost"
LOCAL_REDIS_PORT=6379
LOCAL_REDIS_PASSWORD=""

LOCAL_SMTP_HOST="smtp.gmail.com"
LOCAL_SMTP_PORT=587
LOCAL_SMTP_USER="your-email@gmail.com"
LOCAL_SMTP_PASSWORD="your-app-password"
LOCAL_EMAIL_FROM="noreply@yourapp.com"

LOCAL_FRONTEND_URL="http://localhost:4200"
LOCAL_PORT=3000

# Seed Data (local)
LOCAL_SEED_USER_EMAIL="admin@example.com"
LOCAL_SEED_USER_PASSWORD="Admin@123456"
LOCAL_SEED_USER_FIRST_NAME="Admin"
LOCAL_SEED_USER_LAST_NAME="User"

# If you prefer not to use prefixes, you can also provide the non-prefixed
# variables and they will be used as fallbacks by the configuration loader.
